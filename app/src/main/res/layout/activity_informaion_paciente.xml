<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".InformaionPaciente">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#3887F9"
            android:padding="20dp">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:src="@drawable/uspr"/>

            <TextView
                android:id="@+id/nombre_completo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/profile_image"

                android:fontFamily="@font/alatsi"
                android:includeFontPadding="false"
                android:text="Guillermo"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/usernameprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nombre_completo"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/profile_image"
                android:includeFontPadding="false"
                android:text="Mendez Salazar"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            android:orientation="vertical"
            android:padding="20dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:textColorHint="@color/black"
                android:hint="CURP: MSPOE234D23DF"
                app:hintTextColor="@color/black"
                android:id="@+id/usuarioIS">

                <com.google.android.material.textfield.TextInputEditText
                    android:textCursorDrawable="@drawable/edit_text_cursor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:background="@drawable/backwithborder"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/black"
                android:hint="FECHA DE NACIMIENTO: 04-10-2004"
                app:hintTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:textCursorDrawable="@drawable/edit_text_cursor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:background="@drawable/backwithborder"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/black"
                android:hint="TIPO DE SANGRE: O +"
                app:hintTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:textCursorDrawable="@drawable/edit_text_cursor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:background="@drawable/backwithborder"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/black"
                android:hint="FECHA DE SU ULTIMO EXAMEN: 05-02-2023"
                app:hintTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:textCursorDrawable="@drawable/edit_text_cursor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:background="@drawable/backwithborder"/>

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/actualizar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF465F"
                android:text="VER MAS"
                android:layout_marginTop="8dp"
                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>