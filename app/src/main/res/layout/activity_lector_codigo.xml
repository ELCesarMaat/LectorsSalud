<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LectorCodigoActivity">

    <include layout="@layout/action_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btnIrAlectorcodigo"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="ABRIR ESCANEAR"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:backgroundTint="#3887F9"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/textEsperando"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            android:ems="11"
            android:fontFamily="@font/black_han_sans"
            android:gravity="left"
            android:text="Esperando lectura QR..."
            android:textColor="@color/black"
            android:textSize="23sp" />

        <EditText
            android:id="@+id/textAfiliado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:ems="11"
            android:fontFamily="@font/black_han_sans"
            android:gravity="left"
            android:text="Afiliado con..."
            android:textColor="@color/black"
            android:textSize="23sp" />

       <Button
        android:id="@+id/BTNinfo"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:text="ABRIR INFORMACION"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:backgroundTint="#FF465F"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="5dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>