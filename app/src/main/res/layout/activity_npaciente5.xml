<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/white" android:padding="20dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="35dp" android:layout_marginBottom="20dp">
        <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@drawable/lectorlogoorigin"/>
        <TextView android:textSize="20sp" android:textColor="@color/black" android:gravity="left" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="Para finalizar ingrese datos de Paciente:" android:fontFamily="@font/alatsi"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="175dp" android:layout_marginBottom="20dp">
        <com.google.android.material.textfield.TextInputLayout android:textColorHint="@color/black" android:id="@+id/usuarioIS" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="NUMERO DE TELEFONO" app:hintTextColor="@color/black">
            <com.google.android.material.textfield.TextInputEditText android:textColor="@color/black" android:background="@drawable/backwithborder" android:layout_width="match_parent" android:layout_height="wrap_content" android:textCursorDrawable="@drawable/edit_text_cursor"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout android:textColorHint="@color/black" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="11dp" android:hint="CORREO DEL PACIENTE" app:hintTextColor="@color/black">
            <com.google.android.material.textfield.TextInputEditText android:textColor="@color/black" android:background="@drawable/backwithborder" android:layout_width="match_parent" android:layout_height="wrap_content" android:textCursorDrawable="@drawable/edit_text_cursor"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout android:textColorHint="@color/black" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="11dp" android:hint="NOMBRE DE CONTACTO DE EMERGENCIA" app:hintTextColor="@color/black">
            <com.google.android.material.textfield.TextInputEditText android:textColor="@color/black" android:background="@drawable/backwithborder" android:layout_width="match_parent" android:layout_height="wrap_content" android:textCursorDrawable="@drawable/edit_text_cursor"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout android:textColorHint="@color/black" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="11dp" android:hint="NUMERO DE TELEFONO DEL CONTACO" app:hintTextColor="@color/black">
            <com.google.android.material.textfield.TextInputEditText android:textColor="@color/black" android:background="@drawable/backwithborder" android:layout_width="match_parent" android:layout_height="wrap_content" android:textCursorDrawable="@drawable/edit_text_cursor"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout android:textColorHint="@color/black" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="11dp" android:hint="USERNAME DE EL DOCTOR QUE ATENDIO" app:hintTextColor="@color/black">
            <com.google.android.material.textfield.TextInputEditText android:textColor="@color/black" android:background="@drawable/backwithborder" android:layout_width="match_parent" android:layout_height="wrap_content" android:textCursorDrawable="@drawable/edit_text_cursor"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button android:textSize="15sp" android:textColor="@color/white" android:id="@+id/BTN5" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginTop="8dp" android:layout_marginBottom="5dp" android:text="FINALIZAR Y GENERAR CODIGO QR" android:backgroundTint="#ff465f"/>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
