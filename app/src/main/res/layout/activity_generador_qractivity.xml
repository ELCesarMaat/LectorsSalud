<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".GeneradorQRActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/lectorlogoorigin"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:fontFamily="@font/alatsi"
            android:text="INRESA UN NUMERO AL AZAR, ESTE NUMERO SERA LA ID PARA IDENTIFICAR A EL PACIENTE"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:gravity="center"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/black"
            android:hint="ID"
            app:hintTextColor="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:textCursorDrawable="@drawable/edit_text_cursor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:background="@drawable/backwithborder"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/BTNgenerador"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="GENERAR CODIGO"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:backgroundTint="#3887F9"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>